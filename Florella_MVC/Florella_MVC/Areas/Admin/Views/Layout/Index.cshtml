@model List<Layout>

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Basic Table</h4>
                    <p class="card-description">
                        Add class <code>.table</code>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) { 
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Slogan</td>
                                        <td>@item.facebook_url</td>
                                        <td>@item.twitter_url</td>

                                        <td><a class="btn btn-primary" asp-area="Admin" asp-controller="Layout" asp-action="Detail" asp-route-id="@item.Id">
                                            Details
                                        </a></td>
                                        <td> <a class="btn btn-success" asp-controller="" asp-action="" asp-route-id="@item.Id">
                                            Update
                                        </a></td>
                                        <td>   <a class="btn btn-danger" asp-controller="Layout" asp-action="Delete" asp-route-id="@item.Id">
                                            Delete
                                        </a></td>
                                     
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>