@model SliderImage

<div class="row">
    <div class="col-12">
        <h1>New category</h1>
        <form class="forms-sample" enctype="multipart/form-data" method="post" asp-controller="SliderImage" asp-action="Create">
            <div class="form-group">
                <label asp-for="File"></label>
                <input type="file" asp-for="File" placeholder="Enter Name" accept="image/*">
                <span class="text-danger" asp-validation-for="File"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

