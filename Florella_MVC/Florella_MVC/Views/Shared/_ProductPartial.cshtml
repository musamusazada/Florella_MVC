@model List<Product> 
@{
    ViewData["Title"] = "_PartialProduct";
}


@foreach (var pro in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@pro.category.name.ToLower()">
            <div class="img">
                <a href="">
                    <img src="~/img/@pro.image" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@pro.name</h6>
            </div>
            <div class="price">
                <span class="text-black-50"><a asp-controller="Basket" asp-action="AddToBasket" asp-route-id="@pro.Id">Add to cart</a></span>
                <span class="text-black-50">$@pro.price</span>
            </div>
        </div>
    </div>

}
