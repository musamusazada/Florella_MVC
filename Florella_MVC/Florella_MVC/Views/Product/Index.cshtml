
@{
    ViewData["Title"] = "Index";
    ViewModelProduct viewProducts = Model;
}


<section id="product-list-title">
    <div class="container py-4">
        <div class="row py-5">
            <div class="col-12">
                <h1>Product List</h1>
                <i class="text-muted">Where flowers are our inspiration</i>
            </div>
        </div>
    </div>
</section>
<section id="products">
    <div class="container">
        <div id="product-cont" class="row">
           <partial name="_ProductPartial" model="@viewProducts.products" />
          
        </div>
        <div class="col-12 d-flex justify-content-center py-2">
               <button id="loadMore" class="btn btn-primary">Load More</button>
           </div>
    </div>
</section>
